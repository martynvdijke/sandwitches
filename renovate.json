{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    "group:allNonMajor"
  ],
  "timezone": "UTC",
  "schedule": ["every day"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "npm": {
    "enabled": true
  },
  "pip_python": {
    "enabled": true,
    "fileMatch": ["(^|/)/pyproject\.toml$"]
  },
  "uv": {
    "enabled": true
  }
}
